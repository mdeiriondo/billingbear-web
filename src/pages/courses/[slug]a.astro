---
import Layout from '../../layouts/Layout.astro';
import { getCourses, getHoles } from '../../lib/wp';

// 1. Generación de rutas dinámicas
export async function getStaticPaths() {
  const courses = await getCourses();
  
  return courses.map((course: any) => ({
    params: { slug: course.slug },
    props: { course },
  }));
}

const { course } = Astro.props;

// 2. Obtención y ordenación de hoyos
const allHoles = await getHoles();
const holes = allHoles
  .filter((h: any) => h.acf?.parent_course === course.id || true) 
  .sort((a: any, b: any) => (a.acf?.hole_number || 0) - (b.acf?.hole_number || 0));

// Assets
const logoUrl = "https://billingbearpark.com/wp-content/uploads/2020/10/cropped-treat2-2.png";
const featuredImage = course._embedded?.['wp:featuredmedia']?.[0]?.source_url || "https://images.pexels.com/photos/1325681/pexels-photo-1325681.jpeg";
---

<Layout title={`${course.title.rendered} | Billingbear Park`}>
    
    <!-- HEADER GLOBAL CONSISTENTE -->
    <nav class="bg-brand-green text-white py-4 px-6 sticky top-0 z-[100] shadow-xl border-b border-white/5">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <a href="/" class="flex items-center gap-4 group">
                <img src={logoUrl} alt="Billingbear Logo" class="h-8 md:h-10 w-auto brightness-0 invert" />
                <div class="hidden md:block border-l border-white/20 pl-4">
                    <span class="font-serif italic text-lg leading-none block">{course.title.rendered}</span>
                </div>
            </a>
            
            <div class="flex items-center gap-6 md:gap-10">
                <div class="hidden lg:flex gap-6 text-[10px] uppercase font-bold tracking-widest text-white/70">
                    <a href="/vouchers" class="hover:text-brand-gold transition-colors">Gift Vouchers</a>
                    <a href="/#events" class="hover:text-brand-gold transition-colors">Events</a>
                </div>
                <a href="/" class="text-[9px] md:text-[10px] uppercase font-bold tracking-widest bg-white/10 hover:bg-white/20 border border-white/20 px-4 py-2 transition-all leading-none">
                    &larr; Back Home
                </a>
            </div>
        </div>
    </nav>

    <main>
        <!-- HERO DEL CAMPO -->
        <header class="relative h-[65vh] flex items-center justify-center overflow-hidden">
            <img src={featuredImage} class="absolute inset-0 w-full h-full object-cover" alt={course.title.rendered} />
            <div class="absolute inset-0 bg-brand-green/40 mix-blend-multiply"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-brand-cream via-transparent to-black/30"></div>
            
            <div class="relative z-10 text-center px-6 mt-12 reveal">
                <span class="text-brand-gold uppercase tracking-[0.4em] text-[10px] md:text-xs font-bold mb-4 block">Martin Hawtree Design</span>
                <h1 class="text-6xl md:text-9xl text-white font-serif italic drop-shadow-2xl leading-none">
                    {course.title.rendered}
                </h1>
            </div>
        </header>

        <!-- FICHA TÉCNICA RÁPIDA -->
        <section class="relative z-20 -mt-16 max-w-5xl mx-auto px-6 mb-20">
            <div class="bg-white shadow-2xl rounded-sm grid grid-cols-2 md:grid-cols-4 divide-x divide-brand-stone border border-brand-stone overflow-hidden">
                <div class="p-8 text-center bg-brand-cream/30">
                    <span class="block text-[10px] uppercase tracking-widest text-brand-gold font-bold mb-2">Total Par</span>
                    <span class="text-3xl font-serif text-brand-green italic leading-none">{course.acf?.total_par || '72'}</span>
                </div>
                <div class="p-8 text-center">
                    <span class="block text-[10px] uppercase tracking-widest text-brand-gold font-bold mb-2">Total Yards</span>
                    <span class="text-3xl font-serif text-brand-green italic leading-none">{course.acf?.total_yards || '6,100'}</span>
                </div>
                <div class="p-8 text-center bg-brand-cream/30">
                    <span class="block text-[10px] uppercase tracking-widest text-brand-gold font-bold mb-2">Course Rating</span>
                    <span class="text-3xl font-serif text-brand-green italic leading-none">{course.acf?.rating || '70.2'}</span>
                </div>
                <div class="p-8 text-center flex items-center justify-center">
                    <button class="booking-trigger bg-brand-gold text-brand-green px-6 py-3 text-[10px] font-bold uppercase tracking-widest hover:bg-brand-green hover:text-white transition-all shadow-md leading-none">
                        Book Tee Time
                    </button>
                </div>
            </div>
        </section>

        <!-- SCORECARD DETALLADO -->
        <section class="py-12 px-6 max-w-7xl mx-auto reveal">
            <div class="text-center mb-12">
                <h2 class="font-serif text-3xl text-brand-green italic mb-2">Official Scorecard</h2>
                <p class="text-[10px] uppercase tracking-widest text-brand-dark/40 font-bold">Technical Specifications</p>
            </div>
            
            <div class="overflow-x-auto shadow-xl border border-brand-stone bg-white p-1">
                <table class="w-full text-left border-collapse">
                    <thead class="bg-brand-green text-white font-serif italic text-sm">
                        <tr>
                            <th class="p-4 border border-white/10">Hole</th>
                            <th class="p-4 border border-white/10 text-center bg-brand-dark/20">White</th>
                            <th class="p-4 border border-white/10 text-center bg-yellow-600/20">Yellow</th>
                            <th class="p-4 border border-white/10 text-center bg-red-600/20">Red</th>
                            <th class="p-4 border border-white/10 text-center">Par</th>
                            <th class="p-4 border border-white/10 text-center">S.I.</th>
                        </tr>
                    </thead>
                    <tbody class="text-xs md:text-sm font-medium text-brand-dark/80 tracking-tight">
                        {holes.map((hole: any) => (
                            <tr class="hover:bg-brand-cream/50 transition-colors border-b border-brand-stone">
                                <td class="p-4 font-bold border-r border-brand-stone text-brand-green">{hole.acf?.hole_number}</td>
                                <td class="p-4 text-center border-r border-brand-stone bg-brand-stone/10">{hole.acf?.yards_white}</td>
                                <td class="p-4 text-center border-r border-brand-stone">{hole.acf?.yards_yellow}</td>
                                <td class="p-4 text-center border-r border-brand-stone">{hole.acf?.yards_red}</td>
                                <td class="p-4 text-center border-r border-brand-stone font-serif italic text-brand-green text-base">{hole.acf?.par}</td>
                                <td class="p-4 text-center font-bold text-brand-gold">{hole.acf?.stroke_index}</td>
                            </tr>
                        ))}
                    </tbody>
                    <tfoot class="bg-brand-cream/50 font-bold text-brand-green uppercase text-[10px] tracking-widest">
                        <tr>
                            <td class="p-4">TOTAL</td>
                            <td class="p-4 text-center bg-brand-stone/20">{course.acf?.total_yards}</td>
                            <td class="p-4 text-center">-</td>
                            <td class="p-4 text-center">-</td>
                            <td class="p-4 text-center font-serif italic text-lg">{course.acf?.total_par}</td>
                            <td class="p-4 text-center">-</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </section>

        <!-- HOLE BY HOLE GRID -->
        <section class="py-24 bg-brand-cream/50 border-t border-brand-stone">
            <div class="max-w-7xl mx-auto px-6">
                <div class="flex justify-between items-end mb-16">
                    <div>
                        <h3 class="font-serif text-4xl text-brand-green italic mb-2">The Hole Guide</h3>
                        <p class="text-xs uppercase tracking-[0.2em] font-bold text-brand-gold">Professional Strategy & Flyovers</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                    {holes.map((hole: any) => (
                        <div class="group bg-white border border-brand-stone p-1 rounded-sm transition-all duration-700 hover:shadow-3xl hover:-translate-y-2 reveal">
                            <!-- Visual del Hoyo -->
                            <div class="aspect-video overflow-hidden relative">
                                <img 
                                    src={hole._embedded?.['wp:featuredmedia']?.[0]?.source_url || "https://images.pexels.com/photos/274133/pexels-photo-274133.jpeg"} 
                                    class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" 
                                    alt={`Hole ${hole.acf?.hole_number}`}
                                />
                                <div class="absolute inset-0 bg-brand-green/20 group-hover:bg-transparent transition-colors"></div>
                                <div class="absolute top-4 left-4 bg-brand-green text-white w-12 h-12 flex items-center justify-center font-serif italic text-2xl shadow-xl leading-none">
                                    {hole.acf?.hole_number}
                                </div>
                                {hole.acf?.drone_video_url && (
                                    <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm p-2 rounded-full shadow-lg group-hover:bg-brand-gold transition-colors">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
                                    </div>
                                )}
                            </div>
                            
                            <!-- Información del Hoyo -->
                            <div class="p-8">
                                <div class="flex justify-between items-center border-b border-brand-stone pb-6 mb-6">
                                    <div class="text-center">
                                        <span class="block text-[8px] uppercase tracking-widest font-bold text-brand-gold mb-1">Par</span>
                                        <span class="text-xl font-serif text-brand-green italic leading-none">{hole.acf?.par}</span>
                                    </div>
                                    <div class="text-center">
                                        <span class="block text-[8px] uppercase tracking-widest font-bold text-brand-gold mb-1">Index</span>
                                        <span class="text-xl font-serif text-brand-green italic leading-none">{hole.acf?.stroke_index}</span>
                                    </div>
                                    <div class="text-center">
                                        <span class="block text-[8px] uppercase tracking-widest font-bold text-brand-gold mb-1">Yards</span>
                                        <span class="text-xl font-serif text-brand-green italic leading-none">{hole.acf?.yards_white}</span>
                                    </div>
                                </div>

                                <div class="relative">
                                    <h4 class="text-[10px] uppercase tracking-widest font-bold text-brand-green mb-3 flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-brand-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>
                                        Pro's View
                                    </h4>
                                    <p class="text-sm font-light italic leading-relaxed text-brand-dark/70 group-hover:text-brand-dark transition-colors duration-500">
                                        {hole.acf?.pro_tip}
                                    </p>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA FINAL -->
        <section class="py-24 bg-brand-green text-center reveal">
            <h2 class="font-serif text-5xl text-white italic mb-4 leading-tight">Master the Course</h2>
            <p class="text-white/60 text-lg font-light mb-10 max-w-xl mx-auto">Discover why Billingbear Park has been a golfer's favourite for over 30 years.</p>
            <button class="booking-trigger bg-brand-gold text-brand-green px-12 py-5 text-xs font-bold uppercase tracking-[0.3em] hover:bg-white transition-all shadow-2xl leading-none">
                Reserve Your Tee Time
            </button>
        </section>
    </main>

    <!-- FOOTER MANTENIDO -->
    <footer class="bg-brand-dark py-12 px-6 text-center border-t border-white/5">
        <p class="text-[10px] uppercase tracking-[0.3em] text-white/20">© {new Date().getFullYear()} Billingbear Park Golf Course</p>
    </footer>

    <script>
        const obs = new IntersectionObserver((es) => { 
            es.forEach(e => { if (e.isIntersecting) e.target.classList.add('active'); }); 
        }, { threshold: 0.1 });
        document.querySelectorAll('.reveal').forEach(el => obs.observe(el));
    </script>

    <style>
        .reveal { opacity: 0; transform: translateY(30px); transition: all 1s ease-out; }
        .reveal.active { opacity: 1; transform: translateY(0); }
        
        /* Efecto de Scorecard Table */
        table { border-spacing: 0; }
        th, td { border-color: rgba(0,0,0,0.05); }
    </style>
</Layout>