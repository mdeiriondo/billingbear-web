---
import Layout from '../layouts/Layout.astro';

// Assets
const logoUrl = "https://billingbearpark.com/wp-content/uploads/2020/10/cropped-treat2-2.png";
const contactHero = "https://images.pexels.com/photos/274133/pexels-photo-274133.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1";
---

<Layout title="Contact & Location | Billingbear Park">
    
    <!-- CONSISTENT GLOBAL HEADER -->
    <nav class="bg-brand-green text-white py-4 px-6 sticky top-0 z-[100] shadow-xl border-b border-white/5">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <a href="/" class="flex items-center gap-4 group">
                <img src={logoUrl} alt="Billingbear Logo" class="h-8 md:h-10 w-auto brightness-0 invert" />
                <div class="hidden md:block border-l border-white/20 pl-4">
                    <span class="font-serif italic text-lg leading-none block">Contact</span>
                </div>
            </a>
            
            <div class="flex items-center gap-6 md:gap-10">
                <div class="hidden lg:flex gap-6 text-[10px] uppercase font-bold tracking-widest text-white/70">
                    <a href="/courses/old-course" class="hover:text-brand-gold transition-colors">Old Course</a>
                    <a href="/vouchers" class="hover:text-brand-gold transition-colors">Gift Vouchers</a>
                    <a href="/events" class="hover:text-brand-gold transition-colors">Events</a>
                </div>
                <a href="/" class="text-[9px] md:text-[10px] uppercase font-bold tracking-widest bg-white/10 hover:bg-white/20 border border-white/20 px-4 py-2 transition-all leading-none">
                    &larr; Back Home
                </a>
            </div>
        </div>
    </nav>

    <main class="bg-brand-cream">
        <!-- HERO SECTION -->
        <header class="relative h-[50vh] flex items-center justify-center overflow-hidden">
            <img src={contactHero} class="absolute inset-0 w-full h-full object-cover" alt="Billingbear Park Entrance" />
            <div class="absolute inset-0 bg-brand-green/30 mix-blend-multiply"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-brand-cream via-transparent to-black/40"></div>
            
            <div class="relative z-10 text-center px-6 reveal">
                <span class="text-brand-gold uppercase tracking-[0.5em] text-[10px] md:text-xs font-bold mb-4 block">Get in Touch</span>
                <h1 class="text-6xl md:text-8xl text-white font-serif italic drop-shadow-2xl leading-none">
                    Contact Us
                </h1>
            </div>
        </header>

        <!-- CONTACT INFO CARDS -->
        <section class="relative z-20 -mt-20 max-w-7xl mx-auto px-6 mb-24">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Location -->
                <div class="bg-white p-10 border border-brand-stone shadow-xl hover:shadow-2xl transition-all duration-500 reveal">
                    <div class="w-10 h-10 bg-brand-cream flex items-center justify-center rounded-full mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    </div>
                    <h3 class="font-serif text-2xl text-brand-green mb-4 italic">Our Location</h3>
                    <p class="text-brand-dark/60 font-light text-sm leading-relaxed mb-4">
                        The Straight Mile, Wokingham,<br />
                        Berkshire, RG40 5SJ
                    </p>
                    <a href="https://maps.google.com" target="_blank" class="text-[10px] font-bold uppercase tracking-widest text-brand-gold hover:text-brand-green transition-colors">Get Directions &rarr;</a>
                </div>

                <!-- Contact Direct -->
                <div class="bg-brand-green p-10 shadow-xl reveal" style="transition-delay: 100ms;">
                    <div class="w-10 h-10 bg-white/10 flex items-center justify-center rounded-full mb-6 text-brand-gold">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                    </div>
                    <h3 class="font-serif text-2xl text-white mb-4 italic">Say Hello</h3>
                    <p class="text-white/60 font-light text-sm leading-relaxed mb-1">General Enquiries:</p>
                    <p class="text-white text-lg font-serif mb-4 italic">+44 (0) 1344 860 860</p>
                    <p class="text-white/60 font-light text-sm leading-relaxed mb-1">Email us:</p>
                    <p class="text-brand-gold font-bold uppercase tracking-widest text-xs">info@billingbearpark.com</p>
                </div>

                <!-- Opening Hours -->
                <div class="bg-white p-10 border border-brand-stone shadow-xl hover:shadow-2xl transition-all duration-500 reveal" style="transition-delay: 200ms;">
                    <div class="w-10 h-10 bg-brand-cream flex items-center justify-center rounded-full mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <h3 class="font-serif text-2xl text-brand-green mb-4 italic">Opening Times</h3>
                    <ul class="text-brand-dark/60 font-light text-xs space-y-2">
                        <li class="flex justify-between border-b border-brand-stone pb-2">
                            <span>Mon — Fri</span>
                            <span class="font-bold text-brand-dark">7:30 — Sunset</span>
                        </li>
                        <li class="flex justify-between border-b border-brand-stone pb-2">
                            <span>Sat — Sun</span>
                            <span class="font-bold text-brand-dark">7:00 — Sunset</span>
                        </li>
                    </ul>
                    <p class="mt-4 text-[9px] uppercase tracking-widest text-brand-dark/40 font-bold italic">Note: Times may vary by season.</p>
                </div>
            </div>
        </section>

        <!-- MAP & FORM SECTION -->
        <section class="py-24 px-6 bg-white border-y border-brand-stone">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                    <!-- Map Placeholder / Simulation -->
                    <div class="reveal">
                        <div class="aspect-square bg-brand-cream border border-brand-stone relative group overflow-hidden">
                            <!-- In a real scenario, this would be a Google Maps iframe -->
                            <div class="absolute inset-0 bg-[url('https://images.pexels.com/photos/1051075/pexels-photo-1051075.jpeg?auto=compress&cs=tinysrgb&w=800')] bg-cover opacity-20 grayscale"></div>
                            <div class="absolute inset-0 flex flex-col items-center justify-center p-12 text-center">
                                <span class="text-brand-gold uppercase tracking-[0.3em] text-[10px] font-bold mb-4">Location Map</span>
                                <h4 class="font-serif text-3xl text-brand-green italic mb-6 leading-tight">Finding Billingbear Park</h4>
                                <p class="text-brand-dark/60 text-sm font-light leading-relaxed max-w-sm">
                                    We are conveniently located near the A329(M) and M4, nestled between Wokingham and Bracknell.
                                </p>
                                <button class="mt-8 bg-brand-green text-white px-8 py-3 text-[10px] font-bold uppercase tracking-widest hover:bg-brand-gold transition-all leading-none shadow-xl">
                                    Open in Google Maps
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="reveal" style="transition-delay: 200ms;">
                        <span class="text-brand-gold uppercase tracking-widest text-[10px] font-bold mb-4 block">Direct Message</span>
                        <h2 class="font-serif text-4xl text-brand-green mb-8 italic">Send an Enquiry</h2>
                        
                        <form class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="space-y-1">
                                    <label class="text-[9px] uppercase tracking-[0.2em] font-bold text-brand-dark/40 ml-1">Your Name</label>
                                    <input type="text" class="w-full bg-brand-cream border-b border-brand-stone p-4 focus:outline-none focus:border-brand-gold transition-colors font-light text-sm" />
                                </div>
                                <div class="space-y-1">
                                    <label class="text-[9px] uppercase tracking-[0.2em] font-bold text-brand-dark/40 ml-1">Email Address</label>
                                    <input type="email" class="w-full bg-brand-cream border-b border-brand-stone p-4 focus:outline-none focus:border-brand-gold transition-colors font-light text-sm" />
                                </div>
                            </div>
                            <div class="space-y-1">
                                <label class="text-[9px] uppercase tracking-[0.2em] font-bold text-brand-dark/40 ml-1">Subject</label>
                                <select class="w-full bg-brand-cream border-b border-brand-stone p-4 focus:outline-none focus:border-brand-gold transition-colors font-light text-sm appearance-none cursor-pointer">
                                    <option>General Enquiry</option>
                                    <option>Booking Issues</option>
                                    <option>Membership Questions</option>
                                    <option>Pro Shop & Gifting</option>
                                </select>
                            </div>
                            <div class="space-y-1">
                                <label class="text-[9px] uppercase tracking-[0.2em] font-bold text-brand-dark/40 ml-1">Message</label>
                                <textarea rows="5" class="w-full bg-brand-cream border-b border-brand-stone p-4 focus:outline-none focus:border-brand-gold transition-colors font-light text-sm resize-none"></textarea>
                            </div>
                            <button class="w-full bg-brand-green text-white py-5 text-[10px] font-bold uppercase tracking-[0.3em] hover:bg-brand-gold transition-all leading-none shadow-xl">
                                Submit Message &rarr;
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQ TEASER -->
        <section class="py-24 px-6 text-center reveal">
            <h3 class="font-serif text-3xl text-brand-green italic mb-4">Frequently Asked Questions</h3>
            <p class="text-brand-dark/60 font-light mb-8 max-w-xl mx-auto italic">Before reaching out, you might find your answer in our common queries regarding course rules and dress code.</p>
            <a href="/#notice-board" class="inline-block border-b-2 border-brand-gold text-brand-green font-bold text-xs uppercase tracking-widest pb-1 hover:text-brand-gold transition-colors">Player Information &rarr;</a>
        </section>
    </main>

    <footer class="bg-brand-dark py-12 px-6 text-center border-t border-white/5">
        <p class="text-[10px] uppercase tracking-[0.3em] text-white/20">© {new Date().getFullYear()} Billingbear Park • Berkshire Heritage Golf</p>
    </footer>

    <script>
        const obs = new IntersectionObserver((es) => { 
            es.forEach(e => { if (e.isIntersecting) e.target.classList.add('active'); }); 
        }, { threshold: 0.1 });
        document.querySelectorAll('.reveal').forEach(el => obs.observe(el));
    </script>

    <style>
        .reveal { opacity: 0; transform: translateY(30px); transition: all 1s ease-out; }
        .reveal.active { opacity: 1; transform: translateY(0); }
    </style>
</Layout>